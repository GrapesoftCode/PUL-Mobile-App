             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="PUL.GS.App.Pages.HomePage"
             Visual="Material"
             Title="{Binding Title}"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

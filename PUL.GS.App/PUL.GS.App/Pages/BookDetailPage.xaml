                <Grid Grid.Row="1"
                            Margin="0,0,0,10"
                            HeightRequest="150">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition  Width="auto"></ColumnDefinition>
                        <ColumnDefinition  Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <CollectionView 
                            ItemsSource="{Binding Menus}"
                            VerticalOptions="Center" 
                            HorizontalOptions="Center" 
                            Grid.Row="1" 
                            BackgroundColor="#ffffff"
                            SelectionMode="None"
                            VerticalScrollBarVisibility="Always">
                        <CollectionView.Header>
                            <StackLayout BackgroundColor="#fffff">
                                <Label Padding="5"
                                            Text="Tu pedido"
                                            FontSize="16" 
                                            FontAttributes="None" 
                                            TextColor="#121112" 
                                            FontFamily="{StaticResource SSPSemibold}"
                                            HorizontalTextAlignment="Start"/>
                            </StackLayout>
                        </CollectionView.Header>
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Vertical" Span="1"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"></RowDefinition>
                                    </Grid.RowDefinitions>

                                    <Label Grid.Column="0" 
                                                Grid.Row="0"
                                                Text="{Binding Detail}" 
                                                HorizontalOptions="StartAndExpand"  
                                                FontSize="16" 
                                                FontAttributes="None" 
                                                TextColor="#121112" 
                                                FontFamily="{StaticResource SSPSemibold}"></Label>
                                    <Label Grid.Column="1" 
                                                Grid.Row="0" 
                                                Text="{Binding DetailPrice}" 
                                                HorizontalOptions="EndAndExpand"
                                                FontSize="16" 
                                                FontAttributes="None" 
                                                TextColor="Gray" 
                                                FontFamily="{StaticResource SSPSemibold}"></Label>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Grid>

                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <BoxView Grid.Row="0" 
                                        Grid.Column="0"
                                        VerticalOptions="CenterAndExpand"
                                        HeightRequest="1"
                                        Color="#EDEFEF"></BoxView>

                    <Label Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="0,10,0,10"
                                    Text="Agregar extras" 
                                    FontSize="16" 
                                    FontAttributes="None" 
                                    TextColor="#121112" 
                                    FontFamily="{StaticResource SSPSemibold}"></Label>

                    <BoxView Grid.Row="2" Grid.Column="0"
                                        VerticalOptions="CenterAndExpand"
                                        HeightRequest="1"
                                        Color="#EDEFEF"></BoxView>
                </Grid>

                <Grid Grid.Row="3"
                            Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Text="Propina" 
                                FontSize="16" 
                                FontAttributes="None" 
                                TextColor="#121112" 
                                FontFamily="{StaticResource SSPSemibold}"></Label>

                    <Frame Grid.Column="1" CornerRadius="25" BorderColor="{Binding ColorBc5}"
                                Margin="0" Padding="0">
                        <Label Text="5%" 
                                    HorizontalTextAlignment="Center"
                                    FontSize="16" 
                                    FontAttributes="None" 
                                    TextColor="{Binding ColorText5}" 
                                    BackgroundColor="{Binding ColorBg5}"
                                    FontFamily="{StaticResource SSPSemibold}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TipCommand}" CommandParameter="5" />
                            </Label.GestureRecognizers>
                        </Label>
                    </Frame>
                    <Frame Grid.Column="2" CornerRadius="25" BorderColor="{Binding ColorBc10}"
                                Margin="0" Padding="0">
                        <Label Text="10%" 
                                    HorizontalTextAlignment="Center"
                                    FontSize="16" 
                                    FontAttributes="None" 
                                    TextColor="{Binding ColorText10}" 
                                BackgroundColor="{Binding ColorBg10}"
                                    FontFamily="{StaticResource SSPSemibold}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TipCommand}" CommandParameter="10" />
                            </Label.GestureRecognizers>
                        </Label>
                    </Frame>
                    <Frame Grid.Column="3" CornerRadius="25" BorderColor="{Binding ColorBc15}"
                           Margin="0" Padding="0"
                           HasShadow="False">
                        <Label Text="15%" 
                               HorizontalTextAlignment="Center"
                               FontSize="16"
                               FontAttributes="None"
                               TextColor="{Binding ColorText15}" 
                                    BackgroundColor="{Binding ColorBg15}"
                                    FontFamily="{StaticResource SSPSemibold}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TipCommand}" CommandParameter="15" />
                            </Label.GestureRecognizers>
                        </Label>
                    </Frame>
                    <Frame Grid.Column="4" CornerRadius="25" BorderColor="{Binding ColorBc20}"
                                Margin="0" Padding="0">
                        <Label Text="20%" 
                                    HorizontalTextAlignment="Center"
                                    FontSize="16" 
                                    FontAttributes="None" 
                                    TextColor="{Binding ColorText20}" 
                                    BackgroundColor="{Binding ColorBg20}"
                                    FontFamily="{StaticResource SSPSemibold}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TipCommand}" CommandParameter="20" />
                            </Label.GestureRecognizers>
                        </Label>
                    </Frame>
                </Grid>

                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition  Width="auto"></ColumnDefinition>
                        <ColumnDefinition  Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0"
                            Grid.ColumnSpan="2"
                            Text="Resumen"
                            FontAttributes="None"
                            FontSize="20"
                            FontFamily="{StaticResource SSPBlack}"
                            TextColor="#121112"></Label>

                    <Label Grid.Row="1"
                            Grid.Column="0"
                            Text="Subtotal"
                            FontAttributes="None"
                            FontSize="16"
                            FontFamily="{StaticResource SSPSemibold}"
                            TextColor="#121112"></Label>

                    <Label Grid.Row="1"
                            Grid.Column="1"
                            Text="{Binding CurrentBook.SubTotal, StringFormat='{0:C2}'}" 
                            FontSize="16" 
                            FontAttributes="None" 
                            TextColor="Gray"
                            FontFamily="{StaticResource SSPRegular}"
                            HorizontalOptions="End"></Label>

                    
                    <Label Grid.Row="2"
                            Grid.Column="0"
                            Text="Propina"
                            FontAttributes="None"
                            FontSize="16"
                            FontFamily="{StaticResource SSPSemibold}"
                            TextColor="#121112"></Label>
                    <Label Grid.Row="2"
                        Grid.Column="1"
                        Text="{Binding SubtotalTip, StringFormat='{0:C2}',Mode = TwoWay}"
                        FontSize="16"
                        FontAttributes="None"
                        TextColor="Gray"
                        FontFamily="{StaticResource SSPRegular}"
                        HorizontalOptions="End"></Label>
                    <BoxView Grid.Row="3"
                                Grid.ColumnSpan="2"
                                VerticalOptions="EndAndExpand"
                                HeightRequest="1"
                                Color="#EDEFEF"></BoxView>

                    <Label Grid.Row="4" 
                            Grid.Column="0"
                            Text="Total"
                            HorizontalOptions="Start"
                            FontAttributes="None"
                            FontSize="22"
                            FontFamily="{StaticResource SSPBlack}"
                            TextColor="#121112"></Label>


                    
                    <Label Grid.Row="4"
                            Grid.Column="1"
                            HorizontalOptions="End"
                            Text="{Binding Total, Mode = TwoWay, StringFormat='{0:C2}'}"
                            FontAttributes="None"
                            FontSize="22"
                            FontFamily="{StaticResource SSPBlack}"
                            TextColor="#121112" ></Label>
                    
                </Grid>

                <Grid Grid.Row="5">
                    <controls:CustomButton Text="Reservar"
                                Margin="0,20,0,20"
                                Padding="25,15,20,15"
                                CornerRadius="1"
                                StartColor="#130E1F"
                                MiddleColor="#E51320"
                                EndColor="#FB910D"
                                TextColor="White"
                                GradientOrientation="Horizontal"
                                FontFamily="{StaticResource SSPBold}"
                                Command="{Binding BookCommand}"></controls:CustomButton>
                </Grid>

            </Grid>
        </ScrollView>
    </FlexLayout>
</ContentPage>